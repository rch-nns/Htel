{% extends "base.html.twig" %}

{% block body %}
<div class="container">
<div class="row">
    <div class="col">
        <h1 class="text-center mt-5">Administration</h1>
        <a href="{{ url('admin.home.index') }}" class=""> <u>Retour à l'Accueil</u></a>
        <h2 class="mt-5">Ajouter / Modifier un Article</h2>

         {{ form_start(form, { attr : { novalidate: 'novalidate' } }) }}
            <p>
                {{ form_label(form.poste, 'Poste à proposer : ') }}
                {{ form_widget(form.poste, { attr: { 
                    placeholder: 'Entrez le nom du poste recherché',
                    autofocus :'autofocus'
                     } } ) }}
            </p>
            <p>
                {{ form_label(form.description, 'Déscription du poste : ') }}
                {{ form_widget(form.description, { attr: { 
                    placeholder: 'Décrivez le poste recherché'} } ) }}
            </p>

            <p>
                <button class=" btn btn-primary">Valider</button>
            </p>
         {{ form_end(form) }}

    </div>
</div>
</div>
{% endblock %}