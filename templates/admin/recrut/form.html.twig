{% extends "base.html.twig" %}

{% block body %}
<div class="container">
<div class="row">
    <div class="col">
        <h1>Administration</h1>
        <h2>Ajouter / Modifier un produit</h2>

         {# 
            - form_start/end : affichage du formulaire 
            - form : est la clé envoyé par le controlleur
            - novalidate : désactiver la validation html
         #}

         {{ form_start(form, { attr : { novalidate: 'novalidate' } }) }}
            <p>
                {{ form_label(form.poste, 'Poste à proposer : ') }}
                {{ form_widget(form.poste, { attr: { 
                    placeholder: 'Entrez le nom du poste recherché',
                    autofocus :'autofocus'
                     } } ) }}
            </p>
            <p>
                {{ form_label(form.description, 'Déscription du poste : ') }}
                {{ form_widget(form.description, { attr: { 
                    placeholder: 'Décrivez le poste recherché'} } ) }}
            </p>

            <p>
            <button class=" btn btn-primary">Valider</button>
            </p>
         {{ form_end(form) }}

    </div>
</div>
</div>
{% endblock %}