{% extends 'base.html.twig' %}

{% block title %}Liste des materiels{% endblock %}

{% block body %}

<div class='container'>
   <div class="row">
     <div class="col mt-4">

       <h2 style="color:#415A97">Liste des materiels :</h2> 
       <hr class="">
     </div>
   <div>

<div class="row mt-5 p-2">
{% for materiels in results %}
<div class="col-sm-4 p-2">
  <div id="zoom" class="text-center">
    <h3>{{ materiels.nom }}</h3>
    <h6>{{ materiels.categorie | capitalize}}</h6>
  </div>
  <p class="mt-3">{{ materiels.description | capitalize}}</p>
</div>


{% endfor %}
</div>
</div>
</div>
</div>
{% endblock %}
